# Centralized WiFi Roaming Platform - environment configuration
#
# Copy to .env and adjust as needed. The one-command installer generates a secure .env automatically.

CW_ENV=production

# Public URL used for links shown in the admin UI and docs.
CW_PUBLIC_BASE_URL=http://127.0.0.1

# Reverse proxy site address for Caddy.
# - For local installs without a domain, keep ":80"
# - For production, set to your DNS name (e.g. "wifi.example.com")
CW_DOMAIN=:80

# PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=centralwifi
POSTGRES_USER=centralwifi
POSTGRES_PASSWORD=change-me
DATABASE_URL=postgresql+psycopg2://centralwifi:change-me@postgres:5432/centralwifi

# Redis
REDIS_URL=redis://redis:6379/0

# API
API_PORT=8000
JWT_ISSUER=centralwifi
JWT_SECRET=change-me
JWT_EXPIRES_SECONDS=86400

# Admin bootstrap (created on first startup if missing)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# RADIUS
RADIUS_SHARED_SECRET=change-me
ACTIVE_SESSION_GRACE_SECONDS=180

# Vendo / JuanFi
VENDO_SECONDS_PER_COIN=300
VENDO_EVENT_TOLERANCE_SECONDS=600
DEVICE_TOKEN_ENC_KEY=change-me-32bytes-base64

# SMS
SMS_PROVIDER=mock

# Payment
PAYMENT_PROVIDER=mock

